.posts-list-container,.post-container
    p
        color:$dark-666
        line-height: 2rem

    blockquote
        margin:0 -20px
        font-style: italic
        p
            margin:0
        a
            word-break: break-all
        border-left: 0.3em solid $primary-light
        padding 1em
    img
        display: block
        margin:0 auto
        max-width:100%
        max-height: 500px
        +br
            display: none
            +em
                display: block
                text-align: center
                font-size: 0.9rem
    //只有除标题之外的a标签才应该拥有下划线特效
    a:not(.post-item-title)
        position relative
        &::before
            content: ""
            display: block
            position: absolute
            border-bottom: dashed 1px
            left:50%
            bottom:-3px
            width 0%
            transition: all 0.2s
            height 1px
            margin-top 1px
            transform: translate(-50%);
        &:hover
            &::before
                width: 95%
    //分类和标签页的下划线特效是从左开始展开的
    a.post-category,a.post-tag
        &::before
            left:0%
            transform: unset
        &:not(:last-child):hover::before
            width: 100% - 23px

    //文章列表和文章内页的标题信息部分样式是一致的
    .post-item-info,.post-info
        .post-minor-info
            display: flex
            align-items: baseline
            font-size: 0.95rem
            &:not(:last-child)
                margin-right:10
            span.post-date
                display:inline-block
                color $gray-102
                font-weight: 600

            .post-date,.post-categories
                margin-right: 0.3rem
                &:after
                    content:'/'
                    font-weight: 500
                    font-size: 0.9rem
                    color: $gray-102
                    margin-left: 3px

            .post-categories .post-category,.post-tags .post-tag
                &:not(:last-child):after
                    content:'、'
                    // font-weight: 700
                    color: $gray-102
                    // margin-left: 10

//post-container 仅处理在Post页独有的样式
.post-container
    color:$dark-666
    .post-cover,.post-info,.post-body,section.comment
        background-color: white
        padding:20px
        border-radius: 0.5rem
        margin:20px 0
    .post-info
        h1,h2,h3,h4,h5
            margin:0
    .post-cover
        padding 0
        overflow: hidden
        height: 400px
        background-size: cover
        background-position: center
        background-repeat: no-repeat
        img
            width: 100%
            height: 500px
    code
        word-break: break-all
        display: block
        background-color: #f7f7f7
        padding: 20px