body
    font-size:16px
header
    flex-direction: column
    justify-content: center
    & div
        margin:10px 0

.posts-list-container
    .post-item
        margin:20px

.post-container
    .post-info,.post-body,section.comment
        margin:20px
    .post-info
        .post-minor-info
            margin-top:20px
            flex-direction: column
            align-items: center
            .post-date,.post-categories,.post-tags
                &::after
                    display: none

footer
    flex-direction: column
    justify-content: center
    & span
        margin:10px 0
   